<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{>headerLinks}}
    <title>Weather Jankari</title>
</head>

<body>

    <!-- Navigation Toolbar -->
    {{>header}}
    

    <!-- Hero Section -->
    <div class="container-fluid main_header mt-2">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row hero_section">
                    <div class="col-md-6 col-12 main_header_left" data-aos="fade-up" data-aos-duration="1500">
                        <h1>Welcome To <span id="main_header_site_title">Weather Jankari</span> </h1>
                        <a href="/weather" data-aos="fade-right" data-aos-duration="3500"><button class="btn">Check your City's Status Now</button></a>
                    </div>
                    <div class="col-md-6 col-12 main_header_right" data-aos="fade-left" data-aos-duration="1500">
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="./images/photo1.png" class="w-100" alt="..." style="height: 100%;">
                                </div>
                                <div class="carousel-item">
                                    <img src="./images/photo2.png" class="w-100" alt="..." style="height: 100%;">
                                </div>
                                <div class="carousel-item">
                                    <img src="./images/photo3.png" class="w-100" alt="..." style="height: 100%;">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Footer  -->

    {{>footer}}
    <script src="./js/aos.js"></script>
</body>

</html>